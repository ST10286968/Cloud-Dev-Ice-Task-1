@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .section {
            margin-bottom: 20px;
        }

            .section h2 {
                margin-bottom: 10px;
                color: #007bff; /* Blue color for section headings */
            }

            .section p {
                margin: 0;
                line-height: 1.6;
            }

        .address p {
            font-style: italic;
            color: #666; /* Gray color for address */
        }

        .time p {
            font-weight: bold;
            color: #28a745; /* Green color for current time */
        }

        .button-container {
            text-align: center;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
            cursor: pointer;
            margin: 0 10px;
        }

        .button:hover {
                background-color: #0056b3;
        }
        .h5 {
            text-align:justify-all;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="section">
            <h2>Content</h2>
            <h5> Introducing ShopAway: Your Ultimate Destination for Online Shopping</h5>

            <p> Welcome to ShopAway, your premier online shopping platform designed to provide you with an unparalleled shopping experience right from the comfort of your home. At ShopAway, we understand the importance of convenience, quality, and variety when it comes to fulfilling your shopping needs.</p>
        </div>

        <div class="section address">
            <h2>Address</h2>
          <address>  123 Radar Road Durban North,
                     Durban,
                     South Africa
          </address>
        </div>

        <div class="button-container">
            <a href="/Home/Cart" class="button">Checkout</a>
            <a href="/Home/Itemlist" class="button">Continue Shopping</a>
        </div>
    </div>
</body>
</html>
